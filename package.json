  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "./build.sh",
    "build:types": "tsc -b && rollup -c rollup.dts.config.js",
    "build:themes:pro": "npx @tailwindcss/cli -i ./src/themes/pro.css -o ./dist/themes/pro.css",
    "build:themes:public": "npx @tailwindcss/cli -i ./src/themes/public.css -o ./dist/themes/public.css",
    "build:components": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
